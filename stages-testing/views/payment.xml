<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>


      <!-- Define el custon new form -->
      <record id="view_stages_form" model="ir.ui.view">
          <field name="name">Stages Custom Form View</field>
          <field name="model">stages.payment</field>
          <field name="arch" type="xml">
              <form string="Custom Form Title">
                  <!-- Define los campos del formulario -->
                  <group>
                      <group>
                          <field name="titulo"/>
                          <field name="descripcion"/>
                          <field name="precio"/>
                      </group>
                      <group>
                          <field name="stages"/>
                          <!-- Otros campos -->
                      </group>
                  </group>
                  <!-- Define otros elementos del formulario -->
                    <footer>
                        <button name="action_show_payment_details" string="Ver Detalles"/>
                        <!-- Otros botones -->
                    </footer>
              </form>
          </field>
      </record>


  </data>
</odoo>

