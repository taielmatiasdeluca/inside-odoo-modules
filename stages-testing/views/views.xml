<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Definición del menú raíz -->
    <menuitem id="menu_root" name="Seguimiento(Test)" sequence="10"/>

    <!-- Acciones y vistas posibles a mostrar -->
  
     <record id="stages_payment_list" model="ir.ui.view">
      <field name="name">payment.list</field>
      <field name="model">stages.payment</field>
      <field name="arch" type="xml">
        <tree>
          <field name="titulo"/>
          <field name="descripcion"/>
          <field name="precio"/>
          <field name="stages"/>
        </tree>
      </field>
    </record> 

    <record model="ir.actions.act_window.view" id="stages_action_view_payment_form">
      <field name="sequence" eval="2"></field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="stages_payment_form"></field>
      <field name="act_window_id" ref="stages_payment_form_view"></field>
    </record>

    <record model="ir.actions.act_window" id="stages_action_task_window">
      <field name="name">Listado de Pagos</field>
      <field name="res_model">stages.payment</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú items -->
    <menuitem name="Pagos" id="stages_menu_1" parent="menu_root" action="stages_action_task_window"/>
    
    <menuitem name="Nuevo Pago" id="submenu_new_pay" parent="stages_menu_1"/>

  </data>         
</odoo>
